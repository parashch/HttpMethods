<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.touchbd.parash.httpmethods.httpMethodsActivity"
    android:background="@android:color/holo_green_dark"
    android:baselineAligned="false"
    android:weightSum="1">

    <TextView
        android:text="Result From Server :"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:capitalize="sentences"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnHit" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="QR Code Scan"
        android:id="@+id/scanner"
        android:onClick="scanQR"
        android:gravity="center"
        android:maxWidth="200px"
        android:background="#FFF"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tableRow"
        android:layout_alignEnd="@+id/tableRow"
        android:layout_marginTop="31dp" />


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_weight="0.03"
        android:id="@+id/tableRow"
        android:layout_below="@+id/scanner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Get OTP | "
            android:id="@+id/textView4"
            android:gravity="left" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Re-Registration "
                android:id="@+id/textView3" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="| Create New QR  Code"
                android:id="@+id/textView2"
            android:gravity="right" />
    </TableRow>


    <TextView
        android:id="@+id/josnItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/abc_search_url_text_pressed"
        android:textColor="#08ee13"
        android:layout_below="@+id/textView"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnHit"
        android:visibility="invisible"
        android:layout_below="@+id/btn_new_reg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:layout_gravity="right"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:foregroundGravity="bottom"
            android:gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Registration"
        android:id="@+id/btn_new_reg"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@+id/scanner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />


</RelativeLayout>
